{
  "name": "@sidww/zen",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Sidwebworks",
  "description": "Dead simple state-management",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "module": "./index.mjs",
      "import": "./index.mjs",
      "default": "./index.mjs"
    },
    "./react": {
      "types": "./react.d.ts",
      "module": "./react.mjs",
      "import": "./react.mjs",
      "default": "./react.mjs"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "NODE_ENV=production tsup --dts-resolve",
    "dev": "NODE_ENV=development tsup --watch",
    "test": "vitest run",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@types/node": "17.0.38",
    "@types/react": "^18.0.21",
    "husky": "^8.0.0",
    "prettier": "2.7.0",
    "react": "^18.2.0",
    "tsup": "6.0.1",
    "typescript": "4.7.3",
    "vitest": "0.12.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "peerDependencies": {
    "@types/react": "^18.0.21",
    "react": "^18.2.0"
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "singleQuote": false,
    "semi": false,
    "trailingComma": "all",
    "endOfLine": "lf"
  }
}
